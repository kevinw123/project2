<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/securityLayout"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="IP Address: "
        android:id="@+id/ip_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/ip_field"
        android:layout_below="@+id/ip_text"
        android:layout_alignStart="@+id/ip_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Port: "
        android:id="@+id/port_text"
        android:layout_below="@+id/ip_text"
        android:layout_alignStart="@+id/ip_text"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/port_field"
        android:layout_below="@+id/port_text"
        android:layout_alignStart="@+id/port_text"
        android:inputType="number"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Data"
        android:id="@+id/button"
        android:layout_below="@+id/port_field"
        android:layout_alignStart="@+id/port_field"
        android:layout_marginTop="10dp"/>
</RelativeLayout>